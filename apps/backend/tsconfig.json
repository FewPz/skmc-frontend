{
    "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "@utils/*": ["src/utils/*"]
      }
    },
    "include": ["src/**/*", "src/db"]
  }
  